# =============================================================================
# Vagner Sales Agent - Environment Variables
# =============================================================================
# IMPORTANT: Fill in your actual API keys and credentials below
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
DEBUG=False
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# OpenAI Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
LLM_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Pinecone Vector Database (REQUIRED)
# -----------------------------------------------------------------------------
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENV=us-east-1  # AWS region for Pinecone serverless
PINECONE_INDEX=sales-agent-kb

# -----------------------------------------------------------------------------
# WhatsApp Business API (REQUIRED)
# -----------------------------------------------------------------------------
# Get credentials from: https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token-here
WHATSAPP_PHONE_ID=your-whatsapp-phone-id-here
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# -----------------------------------------------------------------------------
# ElevenLabs Text-to-Speech (REQUIRED)
# -----------------------------------------------------------------------------
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here
ELEVENLABS_VOICE_ID=your-voice-id
ELEVENLABS_VOICE_NAME=your-voice-name

# -----------------------------------------------------------------------------
# File Storage Folders
# -----------------------------------------------------------------------------
MEDIA_FOLDER=materials/media
PDF_FOLDER=materials/pdfs
TEMP_FOLDER=materials/temp

# -----------------------------------------------------------------------------
# Payment Links
# -----------------------------------------------------------------------------
# Configure your payment provider links here
PAYMENT_LINK_NORMAL=https://pay.example.com/linkA
PAYMENT_LINK_DISCOUNT40=https://pay.example.com/linkA?disc=40
PAYMENT_LINK_DISCOUNT50=https://pay.example.com/linkA?disc=50
